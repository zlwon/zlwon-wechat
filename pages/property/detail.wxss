.box {
  background: #eee;
}

.content {
  padding: 10px 12px;
  box-sizing: border-box;
  background: white;
}

.content .c-title {
  display: block;
  font-weight: bold;
  font-size: 18px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.c-label {
  max-height: 70px;
  overflow: hidden;
}

  .content label {
  display: inline-block;
  margin: 8px 10px 0 0;
   padding: 4px 5px;
  background: #eee;
  box-sizing: border-box;
  }

  .content .c-more {
    margin-top: 5px;
    text-align: right;
    color: #999;
  }

  .content i.iconfont {
    margin-left: 5px;
    vertical-align: top;
  }

.parameter {
  display: block;
  padding-bottom: 30px;
  margin-top: 10px;
  background: white;
}

.parameter .p-list {
  display: block;
  height: 36px;
  line-height: 36px;
  padding: 0 6px 0 84px;
  border-bottom: 1px solid #dcdcdc;
  position: relative;
  box-sizing: border-box;
}

.p-list text {
  width: 72px;
  height: 36px;
  line-height: 36px;
  position: absolute;
  top: 0;
  left: 0;
  text-align: right;
}

.detail {
  margin-top: 10px;
}

.detail .tabs {
    background: white;
}

.detail .tabs  label {
  width: 33.33%;
  float: left;
  text-align: center;
}

.detail .tabs i {
  display: inline-block;
  padding: 8px 12px 4px 12px;
  box-sizing: border-box;
}

.detail .tabs .active {
  border-bottom: 3px solid #21AB39;
}

.detail .d-txt {
  margin-top: 6px;
  padding: 8px 12px; 
  line-height: 22px;
  background: white;
  box-sizing: border-box;
}
