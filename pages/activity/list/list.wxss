.container {
  padding: 50px 0 40px 0;
  height: 100%;
}

.head {
  width: 100%;
  height: 50px;
  line-height: 50px;
  padding: 0 10px 0 2px;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  box-sizing: border-box;
  border-top: 1px solid #ccc;
  z-index: 4;
}

.head navigator:first-child {
  display: inline-block;
  margin-right: 5px;
  font-size: 22px;
  vertical-align: top;
}

.images swiper {
  height: 150px;
}

.images image {
  width: 100%;
  height: 150px;
  background: white;
}

.warm {
  padding: 6px 10px 0 76px;
  box-sizing: border-box;
  position: relative;
  background: white;
}

.warm text {
  display: block;
  color: #888;
}

.warm text:first-child {
  margin-bottom: 6px;
}

.warm:after {
  position: absolute;
  top: 6px;
  left: 10px;
  content: "活动规则 : "
}

.list {
  margin: 12px 10px 0 10px;
  position: relative;
  padding: 10px 0 6px 54px;
  background: white;
  border-top:  1px dotted #dcdcdc;
}

.list .portrait{
  width: 40px;
  height: 40px;
  position: absolute;
  top: 10px;
  left: 6px;
}

.list .txt view {
  margin-bottom: 6px;
}

.list .blue {
  color: #5945ef;
}

.list .txt image {
  width: 100px;
  height: 100px;
  margin-bottom: 6px;
}

.list .tools {
  line-height: 30px;
  margin-bottom: 6px;
  text-align: right;
  color: #888;
}

.list .tools i {
  display: inline-block;
  margin-right: 6px;
  font-size: 20px;
  vertical-align: top;
}

.list .comment {
  margin-bottom: 4px;
  padding: 4px 6px;
  box-sizing: border-box;
  background: #f0f0f0;
}

.list .comment.overflow {
  max-height: 48px;
}

.list .comment view{
  margin-top: 4px;
}

.list .comment view:first-child {
  margin-top: 0;
}

.top {
  width: 34px;
  height: 34px;
  line-height: 34px;
  position: fixed;
  bottom: 38px;
  right: 12px;
  text-align: center;
  color: white;
  border-radius: 8px;
  background: #ccc;
  z-index: 4;
}

.top:active {
  background: #bbb;
}

.top icon {
  font-size: 20px;
}

.send {
  width: 100%;
  height: 38px;
  padding: 4px 6px;
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  background: rgba(0,0,0,0.2);
  -webkit-transition: transform 0.5s;
  transition: transform 0.5s;
}

.send.slide-t {
  transform: translateY(0%);
}

.send.slide-b {
    transform: translateY(50px);
}

.send input {
  display: inline-block;
  width: 80%;
  height: 30px;
  line-height: 30px;
  padding: 0 8px;
  background: white;
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
}

.send label {
  display: inline-block;
  width: 20%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  vertical-align: top;
}

.send label.s-btn {
  color: #fff;
  background: #28a709;
  border-top: 1px solid #dcdcdc;
  border-right: 1px solid #dcdcdc;
  border-bottom: 1px solid #dcdcdc;
  box-sizing: border-box;
}

.send label.c-btn {
  background: #f0f0f0;
}


.send label.s-btn:active {
  background: #27980c;
}

.send label.c-btn:active {
  background: #bbb;
}

.hidden-clamp2 {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.hidden-clamp3 {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

