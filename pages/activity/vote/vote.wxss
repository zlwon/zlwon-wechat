.container {
  height: 100%;
  background: #eee;
}

.vote {
  padding: 8px 10px;
  box-sizing: border-box;
  border-top: 1px solid #ccc;
}

.vote textarea {
  width: 100%;
  height: 58px;
}

.camera {
  position: relative;
  padding: 5px 10px;
  box-sizing: border-box;
  font-size: 30px;
  color: #999;
}

.camera image {
  width: 120px;
  height: auto;
}

.camera video {
  width: 120px;
  height: 120px;
}

.camera label {
  position: absolute;
  height: 30px;
  line-height: 30px;
  margin-top: 6px;
  padding: 0 15px;
  top: 50%;
  margin-top: -15px;
  right: 10px;
  font-size: 14px;
  box-sizing: border-box;
}

.camera label.disable {
  background: #fafafa;
  border: 1px solid #dcdcdc;
}

.camera label.available {
  color: white;
  background: #21AB39;
}

.camera label.available:active {
  background: #006600;
}

.loading {
  width: 100%;
  height: 100%;
  line-height: 100%;
  position: fixed;
  text-align: center;
  top: 0;
  left: 0;
  color: white;
  background: transparent;
  z-index: 5;
}

.loading .loading-t {
  height: 100%;
  position: relative;
}

.loading .loading-l {
  padding: 12px;
  position: absolute;
  top: 44%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 6px;
  background: rgba(0,0,0,0.7)
}

.loading image {
  display: block;
  width: 36px;
  height: 36px;
  margin: 0 auto 16px auto;
  background: transparent;
}

.prompt {
  padding: 2px 10px 10px 10px;
}