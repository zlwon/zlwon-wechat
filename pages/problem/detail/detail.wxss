page{
  background: #fafafa;
}

.box {
  padding-bottom: 65px;
}

.title {
  padding: 6px 12px;
  font-weight: bold;
  background: white;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
}

.reply {
  margin-top: 8px;
  padding: 0 12px;
  font-weight: bold;
}

.problem {
  margin-top: 8px;
  padding: 6px 12px;
  box-sizing: border-box;
  background: white;
  border-bottom: 1px solid #ddd;
}

.problem .l-image {
  padding-left: 38px;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.problem .l-image label text {
  display: block;
  font-size: 12px;
  color: #999;
  font-weight: normal;
}

.problem .l-image image {
  width: 32px;
  height: 32px;
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 6px;
}

.problem>view + view {
  margin-top: 5px;
}


.send {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 12;
}

.send .s-input {
  width: 70%;
  float: left;
  position: relative;
  padding: 10px 12px;
  background: #eee;
  box-sizing: border-box;
}

.send .s-input icon {
  height: 60px;
  line-height: 60px;
  position: absolute;
  top: 0;
  left: 20px;
  text-align: center;
  color: #999;
  font-size: 20px;
  z-index: 3;
}

.send .s-input input {
  width: 100%;
  height: 40px;
  line-height: 40px;
  padding: 0 10px 0 32px;
  background: #fff;
  border: 1px solid #dcdcdc;
  box-sizing: border-box;
}

.send .s-button {
  width: 30%;
  height: 60px;
  line-height: 60px;
  float: right;
  text-align: center;
  color: #fff;
  background: #21AB39;
}

.send .s-input label {
  display: block;
  height: 40px;
  line-height: 40px;
  margin-left: 34px;
  text-align: center;
  color: #777;
  border: 1px solid #ccc;
  border-radius: 5px;
  background: #fff;
  box-sizing: border-box;
}

.send .s-input label:active {
  background: #ddd;
}

.orange {
  color: #ff7200;
}

  .tools {
    width: 100%;
    height: 45px;
    line-height: 45px;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 3;
  }

  .tools .t-list {
    width: 33.33%;
    float: left;  
    position: relative;
    color: white;
    text-align: center;
  }

  .tools .t-list:first-child {
    color: #888;
    background: #eee;
  }

  .t-list button {
    background: none;
    border-radius: 0;
    padding: 0;
    line-height: inherit;
    color: white;
    font-size: 13px;
  }

  .t-list button:after{
    background: none;
    border: none;
  }

  .t-list.bg-orange {
    background: #FF9900;
  }

  .t-list.bg-drakgreen {
    background: #58DE70;
  }

  .t-list i {
    display: inline-block;
    margin-right: 4px; 
    font-size: 18px;
  }

  .tools i.font {
    font-size: 30px;
  }

  .tools .t-list i.orange {
    color: #ff7200;
  }

  .tools .hover::after {
    width: 100%;
    height: 100%;
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.1);
  }