<view class="box">
  <view class="problem">
    <navigator class="s-list" wx:for="{{list.dataList}}" wx:key="{{index}}" hover-class="none" url="../detail/detail?id={{item.id}}">
      <view class="weight">此问题关于：{{item.source}}</view>

       <view class="p-image"><image src="{{item.headerimg}}"></image>{{item.nickname}},{{item.intro || '暂无'}}</view> 

      <view class="weight overflow-point">{{item.title}}</view>

      <view class="clamp">{{item.content}}</view>
    </navigator>
  </view>

  <!-- 公共站底 -->
  <view class="tabar">
    <navigator url="/pages/space/list/list" class="" hover-class="none"><i class="iconfont icon-biaodanyemian"></i>物性表</navigator>

    <navigator url="/pages/case/list/list" hover-class="none"><i class="iconfont icon-tukuanli"></i>应用案例</navigator>

    <navigator open-type="redirect" url="/pages/problem/list/list" class="green" hover-class="none"><i class="iconfont icon-tishi"></i>知料问答</navigator>
  </view>
</view>