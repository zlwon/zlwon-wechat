.box {
  min-height: 100%;
  position: relative;
  box-sizing: border-box;
}

.search { 
  position: relative;
  padding: 9px 48px 8px 12px;
  background: #F2F2F2;
  box-sizing: border-box;
}

.search .fifter {
  width: 48px;
  height: 36px;
  line-height: 36px;
  position: absolute;
  top: 9px;
  right: 0;
  color: #888;
  font-size: 18px;
  text-align: center;
}

.s-input {
  height: 36px;
  line-height: 36px;
  background: white;
  border: 1px solid #ddd;
}

.s-input label {
  display: inline-block;
  width: 40px;
  height: 36px;
  text-align: center;
  background: white;
  vertical-align: top;
  font-weight: bold;
  font-size: 24px;
}

.s-input input {
  display: inline-block;
  width: 75%;
  height: 36px;
  line-height: 36px;
  vertical-align: top;
}

.product {
  margin-top: 20px;
  padding: 0 6px 50px 6px;
  box-sizing: border-box;
}

.p-list {
  width: 50%;
  float: left;
  padding: 4px 6px;
  margin-bottom: 10px;
  box-sizing: border-box;
}

.p-list.hover {
  background: #eee;
}

.p-list image {
  width: 100%;
  height: 128px;
}

 .p-txt {
  display: block;
  line-height: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.p-txt text {
  margin-left: 6px;
}

.popup {
  width: 100%;
  padding-right: 28px;
  position: fixed;
  top: 50px;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 8;
  box-sizing: border-box;
  -webkit-transition: transform 0.5s;
  transition: transform 0.5s;
}

.popup.slide-r {
  transform: translateX(0%);
}

.popup.slide-l {
    transform: translateX(-100%);
}

.popup .layer {
  height: 100%;
  position: relative;
  padding: 10px 10px 55px 10px;
  background: white;
  box-sizing: border-box;
}

.popup .layer .layer-t {
  display: block;
  width: 100%;
  line-height: 30px;
  padding-left: 8px;
  margin-bottom: 10px;
  position: relative;
  border-bottom: 1px solid #dcdcdc;
  box-sizing: border-box;
}

.popup .layer-t:after {
  width: 3px;
  height: 12px;
  content: "";
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -6px;
  background: #21ab39;
}

.popup .layer label {
  display: inline-block;
  margin: 0 6px 8px 0;
  padding: 4px 12px;
  background: #eae7e7;
  border-radius: 5px;
}

.popup .layer label.active {
  color: white;
  background: #21ab39;
}

.popup .layer radio {
  display: none;
}

.popup .layer .btns {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.popup .layer i {
  display: inline-block;
  width: 50%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  box-sizing: border-box;
}

.popup .btns .bg-white:active {
  background: #eae7e7;
}

.popup .btns .bg-green:active {
  background: #1f9233
}

