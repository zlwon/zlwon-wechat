      <view class="relative"><i class="iconfont icon-tubiao209"></i><input bindinput="setPassDate" placeholder="请完善公司地址" bindblur="setCompanyDate" placeholder-class="placeholder"></input></view>

      <view><button bindtap="submitInfo">保存</button></view> 
