.container {
  display: table;
  width: 100%;
  height: 100%;
  background: #F6F6F6;
  box-sizing: border-box;
}

.table {
  display: table-cell;
  width: 100%;
  padding: 0 18px;
  box-sizing: border-box;
  vertical-align: middle;
}

.tabs {
  width: 100%;
  position: absolute;
  top: 10px;
  right: 12px;
  text-align: right;
}

.tabs icon {
  margin-right: 5px;
  color: #00863B;
}

.logo-image {
  display: block;
  margin-bottom: 20px;
  text-align: center;
}

.logo-image image {
  display: inline-block;
  width: 162px;
  height: 92px;
}

.login input {
  width: 100%;
  height: 40px;
  padding: 0 8px 0 36px;
  background: white;
  box-sizing: border-box;
  border: 1px solid #dcdcdc;
}

.login view {
  margin-bottom: 18px;
}

.placeholder {
  color: #CCC
}

.login i {
  width: 40px;
  height: 40px;
  line-height: 40px;
  position: absolute;
  text-align: center;
  top: 1px;
  left: 0;
  color: #ccc;
  font-size: 18px;
}

.login button {
  width: 55%;
  height: 40px;
  line-height: 38px;
  margin-top: 20px;
  color: white;
  background: #00863B;
  -webkit-appearance: none;
}

.login button:active {
  background: #003300;
}