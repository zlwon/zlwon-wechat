<view class="container">
  <view class="table">
    <!-- logo -->
    <view class="logo-image"><image src="/static/images/logo1.png"></image></view>

    <!-- 登录信息 -->
    <view class="login block">
      <view class="relative"><i class="iconfont icon-yonghu"></i><input placeholder="请输入手机号" bindinput="setMobileDate" placeholder-class="placeholder"/></view>

       <!-- 验证码 -->
      <view class="code">
        <view class="c-list"><i class="iconfont icon-duihao"></i><input placeholder="6位短信验证码" placeholder-class="placeholder" maxlength="6" bindinput="setCodeDate"/></view>

        <!-- 发送按钮 -->
        <view class="c-list" hidden="{{countDown < 60}}" bindtap="getSms"><label class="first">获取验证码</label></view>

         <view hidden="{{countDown === 60}}" class="c-list"><label>{{countDown}} 秒后重新获取</label></view> 
      </view>

      <view><button open-type="getUserInfo" bindgetuserinfo="confirmLogin">登录/注册</button></view> 

      <view class="txtC gray">请输入您的手机号获取验证码直接登录。新注册用户可用此手机号登录知料官网，初始密码666666。您可以在官网个人中心维护个人资料和查看自己的提问和回答。如果无法登录请联络我们</view>
    </view>
  </view>
</view>